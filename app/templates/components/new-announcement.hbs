{{#if addNewAnnouncement}}
<h1>New Announcement</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="weather">WEATHER</label>
          {{input value=weather id="weather"}}
        </div>

        <button {{action 'announcementSave'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'announcementFormShow'}}>New announcement Save</button>
{{/if}}
